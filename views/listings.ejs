<!-- bilerplate -->
<% layout("/boilerplate") %>

<h1 class="main-heading tac">Most Populer Listings</h1>

<div class="container all-listings f jcse">
  <% for (listing of listings) { %>
  <div class="card-box f3">
    <div class="row">
      <div class="col-md-3">
        <a href="/listings/<%= listing._id %>" class="card  f fdc jcsb">
          <div class="img">
            <img src="<%= listing.image.url %>" alt="image" />
          </div>
          <div class="card-body f fdc jcsb">
            <h3><%= listing.title %></h3>
            <p><%= listing.description %></p>
            <p>
                <span class="line-box">Rs.<%= listing.price.toLocaleString("ur-PK") %></span>
                <span class="line-box"><%= listing.location %></span>
            </p>
          </div>
        </a>
      </div>
    </div>
  </div>
  <%} %>
</div>
