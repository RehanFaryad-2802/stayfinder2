<% layout("/boilerplate") %>

<h1 class="main-heading tac">Most Popular Listings</h1>

<div class="container all-listings f jcs gapc10">
  
  <% for (let i = listings.length - 1; i >= 0; i--) { %>
    <div class="card-box f3">
      <div class="row">
        <div class="col-md-3">
          <a href="/listings/<%= listings[i]._id %>" class="card f fdc jcsb">
            <div class="img">
              <img src="<%= listings[i].image.url %>" alt="image" />
            </div>
            <div class="card-body f fdc jcsb">
              <h3><%= listings[i].title %></h3>
              <p><%= listings[i].description %></p>
              <p>
                <span class="line-box">Rs.<%= listings[i].price %></span>
                <span class="line-box"><%= listings[i].country %></span>
              </p>
            </div>
          </a>
        </div>
      </div>
    </div>
  <% } %>
</div>

