<!-- bilerplate -->
<% layout("/boilerplate") %>

<!-- content -->
<h1 class="main-heading tac">Edit Details</h1>
<form
  action="/listings/<%= listing._id %>/edit?_method=PUT"
  id="NewForm"
  method="post"
  enctype="multipart/form-data"
>
  <div class="input-area">
    <label for="title" class="form-label">Title</label>
    <input
      autocomplete="on"
      name="title"
      value="<%= listing.title %>"
      type="text"
      class="form-control title"
      id="title"
    />
    <h4 class="errmsg dn">Title is required</h4>
  </div>
  <div class="input-area">
    <label for="Description" class="form-label">Description</label>
    <textarea
      rows="5"
      name="description"
      type="text"
      class="form-control description"
      id="Description"
    >
    <%= listing.description.trim() %></textarea
    >
    <h4 class="errmsg dn">Description is required</h4>
  </div>
  <div class="input-area">
    <label for="ImageUrl" class="form-label">Previoues Image</label>    
    <div class="img f col-2">
      <div class="img">
        <img src="<%= listing.image.url %>" alt="Preview" />
      </div>
    </div>
  </div>
  <div class="input-area">
    <label for="ImageUrl" class="form-label">Image Url</label>
    <input
      type="file"
      accept="image/png, image/jpeg, image/jpg"
      class="img file-input"
      name="image[url]"
      id="ImageUrl"
    />
    <h4 class="errmsg dn">Enter Valid Url</h4>
  </div>
  <div class="input-area f jcsb">
    <div class="input-area f3">
      <label for="Country" class="form-label">Country</label>
      <input
        name="country"
        type="text"
        value="<%= listing.country %>"
        value="Pakistan"
        class="form-control country"
        id="Country"
      />
      <h4 class="errmsg dn">Country is required</h4>
    </div>
    <div class="input-area f3">
      <label for="Location" class="form-label">Location</label>
      <input
        name="location"
        type="text"
        class="form-control location"
        value="<%= listing.location %>"
        id="Location"
      />
      <h4 class="errmsg dn">Location is required</h4>
    </div>
    <div class="input-area f3">
      <label for="Price" class="form-label">Price</label>
      <input
        name="price"
        type="text"
        value="<%= listing.price %>"
        class="form-control price"
        id="Price"
      />
      <h4 class="errmsg dn">Price is required</h4>
    </div>
  </div>
  <div class="input-area">
    <input type="submit" value="Update" class="Newsubmit" />
  </div>
</form>
